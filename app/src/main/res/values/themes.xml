<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FirstApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/aqua_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.FirstApplication.EditText">
        <item name="android:background">@drawable/ic_rounded_rectangle</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.FirstApplication.Button">
        <item name="android:background">@drawable/ic_rounded_rectangle</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.FirstApplication.Welcome">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="Theme.FirstApplication.SemiBoldText">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.FirstApplication.SemiBoldText.AppBar">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.FirstApplication.SemiBoldText.Name">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.FirstApplication.SemiBoldText.SelectedName">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.FirstApplication.ThirdScreenText">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Theme.FirstApplication.ThirdScreenText.Name">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.FirstApplication.ThirdScreenText.Email">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Theme.FirstApplication.ThirdScreenText.Empty">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>